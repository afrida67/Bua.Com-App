<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="90"
                android:endColor="#90CAF9"
                android:startColor="#3F51B5" />
            <stroke
                android:width="2dp"
                android:color="#3F51B5" />
            <corners
                android:radius="0dp" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#90CAF9"
                android:startColor="#3F51B5" />
            <stroke
                android:width="2dp"
                android:color="#3F51B5" />
            <corners
                android:radius="0dp" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#E3F2FD"
                android:startColor="#FFFF" />
            <stroke
                android:width="2dp"
                android:color="#3F51B5" />
            <corners
                android:radius="0dp" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>
</selector>