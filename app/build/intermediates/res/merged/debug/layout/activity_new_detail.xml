<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/uu"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="spinner.example.com.buanewtotal.newDetail"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:text="name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etName"
                android:layout_below="@+id/ivImage"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:textColor="#1A237E" />

            <TextView
                android:text="age"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etage"
                android:layout_below="@+id/etName"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:textColor="#1A237E" />

            <TextView
                android:text="phone"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etpn"
                android:layout_below="@+id/etage"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:textColor="#1A237E"
                />

            <TextView
                android:text="sal"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etsal"
                android:layout_below="@+id/etpn"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:textColor="#1A237E"
                />

            <TextView
                android:text="address"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etaddr"
                android:layout_below="@+id/etsal"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:textColor="#1A237E"
                />

            <TextView
                android:text="ref"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/etreff"
                android:layout_below="@+id/etaddr"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:textColor="#1A237E"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="0dp"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:id="@+id/ivImage"
                android:layout_marginLeft="69dp"
                android:src="@android:drawable/star_big_on"
                />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
